<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="memberMapper">
	<resultMap type="member" id="memberMap">
		<result column="MEMBER_NO" property="memberNo"/>
		<result column="REF_TYPE_NO" property="refTypeNo"/>
		<result column="MEMBER_ID" property="memberId"/>
		<result column="MEMBER_PWD" property="memberPwd"/>
		<result column="MEMBER_NAME" property="memberName"/>
		<result column="MEMBER_NICKNAME" property="memberNickname"/>
		<result column="REF_GRADE_NO" property="gradeNo"/>
		<result column="GENDER" property="gender"/>
		<result column="BIRTHDAY" property="birthday"/>
		<result column="CREATE_DATE" property="createDate"/>
		<result column="POINT" property="point"/>
		<result column="PHONE" property="phone"/>
		<result column="STATUS" property="status"/>
	</resultMap>
	<select id="loginMember" resultMap="memberMap">
		SELECT MEMBER_ID, MEMBER_PWD, MEMBER_NAME, MEMBER_NICKNAME, REF_GRADE_NO, GENDER, BIRTHDAY, CREATE_DATE, POINT, PHONE
		FROM MEMBER
		WHERE MEMBER_ID = #{memberId} AND MEMBER_PWD = #{memberPwd}
	</select>
</mapper>